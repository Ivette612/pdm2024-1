<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/my_secondary_color"
        android:alpha="0.7">

    </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="28dp"
        android:layout_marginBottom="-20dp"
        android:id="@+id/card_view"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="28dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Elige tu pedido"
                android:textColor="@color/my_primary_color"
                android:textSize="32sp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CafÃ© capuchino"
                android:alpha="0.7"
                android:textStyle="bold"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:scaleType="center"
                android:src="@drawable/capuchino"/>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/capuchinoOP"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:text="Agregar"
                app:cornerRadius="32dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiramisu"
                android:alpha="0.7"
                android:textStyle="bold"/>


            <ImageView
                android:src="@drawable/turamisu"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:scaleType="center"/>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/tiramisuOP"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:text="Agregar"
                app:cornerRadius="32dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flan"
                android:alpha="0.7"
                android:textStyle="bold"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:scaleType="center"
                android:src="@drawable/flan"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/flanOP"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:text="Agregar"
                app:cornerRadius="32dp"/>


        </LinearLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>